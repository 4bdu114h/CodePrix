# MongoDB connection
MONGO_URI=mongodb://localhost:27017/codeprix

# JWT signing secret (use a long random string in production)
JWT_SECRET=your_jwt_secret_here

# Server
PORT=8000

# Optional: leaderboard service
LEADERBOARD_URL=http://localhost:5001

# ── Admin login (not stored in MongoDB) ─────────────────────────────
# Use either ADMIN_USERNAME or ADMIN_EMAIL (or both set to the same value).
# To sign in as admin: use these exact credentials on the login page.
# Never commit real values; keep them only in .env (not in repo).
ADMIN_USERNAME=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# Alternative: some setups use ADMIN_EMAIL instead of ADMIN_USERNAME
# ADMIN_EMAIL=admin@yourdomain.com
